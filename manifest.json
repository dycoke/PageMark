{
    "name": "PageMark",
    "description": "A browser extension that allows you to take markdown and LaTeX notes on websites.",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "src/index.html",
      "default_icon": "icons/icon.png"
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "permissions": [
      "storage",
      "unlimitedStorage",
      "activeTab",
      "scripting",
      "commands"
    ],
    "options_page": "src/settings.html",
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        },
        "description": "Quickly open the PageMark Note Pad!"
      }
    }
  }